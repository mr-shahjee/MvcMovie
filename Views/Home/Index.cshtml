@model IEnumerable<Models.Employees>

@{
    ViewData["Title"] = "Index";
}
<script src="~/js/site.js" type="module"></script>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

    <script>
        // Your SignalR client script
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/studentHub")
            .build();

        connection.start().then(() => {
            console.log("Connection established.");
        }).catch(err => console.error(err.toString()));

        connection.on("ReceiveStudentRecord", (data) => {
            // Update UI with received data
            console.log("Received new student record:", data);
            addStudentRecordToTable(data);
        });

        // Make connection variable accessible globally
        window.connection = connection;

        // Function to add a new student record to the table
        function addStudentRecordToTable(record) {
            // Create a new row with jQuery
            const newRow = $(`
                                <tr>
                                    <td>${record.id}</td>
                                    <td>${record.name}</td>
                                    <td>${record.gender}</td>
                                    <td>${record.age}</td>
                                    <td>${record.designation}</td>
                                    <td>${record.city}</td>
                                    <td>
                                                <a href="/YourController/Edit/${record.id}">Edit</a> |
                                                <a href="/YourController/Details/${record.id}">Details</a> |
                                                <a href="/YourController/Delete/${record.id}">Delete</a>
                                    </td>
                                </tr>
                            `);

            // Append the new row to the table body
            $('table tbody').append(newRow);
        }
    </script>
}
